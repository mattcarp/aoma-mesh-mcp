{
  "name": "@mc-tk/mcp-agent-server",
  "version": "2.6.1",
  "description": "Multi-tenant AI-Powered Business Intelligence MCP Server with LangSmith observability",
  "type": "module",
  "main": "dist/aoma-mesh-server.js",
  "bin": {
    "aoma-mesh-server": "dist/aoma-mesh-server.js",
    "mcp-agent-server": "dist/aoma-mesh-server.js"
  },
  "scripts": {
    "build": "pnpm run clean && ./node_modules/.bin/tsc || echo 'Build completed with warnings'",
    "build:strict": "pnpm run clean && ./node_modules/.bin/tsc --build tsconfig.json",
    "build:watch": "pnpm run clean && ./node_modules/.bin/tsc --watch",
    "package:lambda": "cd dist && zip -r ../lambda-deployment.zip . -x '*.map'",
    "clean": "rm -rf dist lambda-deployment.zip",
    "dev": "./node_modules/.bin/tsx src/aoma-mesh-server.ts",
    "dev:enhanced": "tsx src/enhanced-cross-vector-server.ts",
    "dev:lambda": "tsx src/lambda-handler.ts",
    "bridge": "tsx src/http-bridge.ts",
    "start": "./node_modules/.bin/tsx src/aoma-mesh-server.ts",
    "start:compiled": "node dist/aoma-mesh-server.js",
    "start:enhanced": "node dist/enhanced-cross-vector-server.js",
    "start:dev": "pnpm run build && pnpm run start",
    "test": "jest",
    "test:cross-vector": "tsx src/test-cross-vector-intelligence.ts",
    "demo:cross-vector": "node src/simple-cross-vector-demo.js",
    "demo:langsmith": "node ./langsmith-value-demo.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "PWDEBUG=1 playwright test",
    "e2e:report": "playwright show-report",
    "e2e:auth": "playwright test --project=auth",
    "e2e:http": "playwright test --project=http",
    "e2e:tools": "playwright test --project=tools",
    "e2e:sse": "playwright test --project=sse",
    "e2e:metrics": "playwright test --project=metrics",
    "e2e:taskmaster": "playwright test --project=taskmaster",
    "e2e:ci": "PLAYWRIGHT_JUNIT_OUTPUT_NAME=playwright-results.xml playwright test --reporter=junit,line",
    "e2e:ci:flaky-retry": "CI=1 playwright test --retries=2",
    "verify:aoma": "tsx scripts/verify-aoma-health.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:server": "tsc --noEmit -p tsconfig.server.json",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "validate": "pnpm run typecheck && pnpm run lint",
    "validate:server": "pnpm run typecheck:server && pnpm run lint",
    "install:mcp": "./install.sh",
    "publish:mcp": "pnpm run build && pnpm pack",
    "health-check": "tsx src/health-check.ts",
    "health-check:built": "node dist/health-check.js",
    "remote:health": "tsx scripts/remote-health.ts",
    "remote:tools": "tsx scripts/remote-tools.ts",
    "smoke:remote": "pnpm run remote:health && pnpm run remote:tools",
    "upgrade": "pnpm update && pnpm audit fix"
  },
  "dependencies": {
    "@langchain/community": "^0.3.56",
    "@langchain/core": "^0.3.77",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/openai": "^0.6.13",
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@supabase/supabase-js": "^2.57.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "langsmith": "^0.3.69",
    "openai": "^4.104.0",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "aws-cdk": "^2.1029.2",
    "aws-cdk-lib": "^2.216.0",
    "constructs": "^10.4.2",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agents",
    "langgraph",
    "langsmith",
    "ai",
    "development-tools",
    "tracing",
    "observability"
  ],
  "author": "MC-TK Team",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
