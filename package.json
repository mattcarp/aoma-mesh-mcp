{
  "name": "@mc-tk/mcp-agent-server",
  "version": "2.0.0",
  "description": "MCP server exposing MC-TK LangGraph agents to external development tools",
  "type": "module",
  "main": "dist/aoma-mesh-server.js",
  "bin": {
    "aoma-mesh-server": "dist/aoma-mesh-server.js",
    "mcp-agent-server": "dist/aoma-mesh-server.js"
  },
  "scripts": {
    "build": "npm run clean && tsc --build tsconfig.lambda.json",
    "build:watch": "npm run clean && tsc --watch",
    "build:lambda": "npm run clean && tsc && npm run package:lambda",
    "package:lambda": "cd dist && zip -r ../lambda-deployment.zip . -x '*.map'",
    "clean": "rm -rf dist lambda-deployment.zip",
    "dev": "tsx src/aoma-mesh-server.ts",
    "dev:enhanced": "tsx src/enhanced-cross-vector-server.ts",
    "dev:lambda": "tsx src/lambda-handler.ts",
    "bridge": "tsx src/http-bridge.ts",
    "start": "node dist/aoma-mesh-server.js",
    "start:enhanced": "node dist/enhanced-cross-vector-server.js",
    "start:lambda": "node dist/lambda-handler.js",
    "start:dev": "npm run build && npm run start",
    "test": "jest",
    "test:cross-vector": "tsx src/test-cross-vector-intelligence.ts",
    "demo:cross-vector": "node src/simple-cross-vector-demo.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "validate": "npm run typecheck && npm run lint",
    "install:mcp": "./install.sh",
    "publish:mcp": "npm run build && npm pack",
    "health-check": "tsx src/health-check.ts",
    "health-check:built": "node dist/health-check.js",
    "upgrade": "npm update && npm audit fix",
    "deploy:lambda": "npm run build:lambda && npm run cdk:deploy",
    "cdk:deploy": "cd infrastructure && npx cdk deploy",
    "cdk:diff": "cd infrastructure && npx cdk diff",
    "cdk:synth": "cd infrastructure && npx cdk synth"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.2",
    "@supabase/supabase-js": "^2.39.0",
    "openai": "^4.20.1",
    "zod": "^3.24.2",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "express-rate-limit": "^7.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "ts-jest": "^29.1.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "aws-cdk": "^2.167.0",
    "aws-cdk-lib": "^2.167.0",
    "constructs": "^10.3.0",
    "@types/aws-lambda": "^8.10.145"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "agents",
    "langgraph",
    "ai",
    "development-tools"
  ],
  "author": "MC-TK Team",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}